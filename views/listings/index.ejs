        <div class="tax-switch">
            <div class="form-check form-switch form-check-reverse">
                <input class="form-check-input" type="checkbox" role="switch" id="switchCheckReverse">
                <label class="form-check-label" for="switchCheckReverse">Destination Price with Tax</label>
            </div>
        </div>
  </div>

    <div class="row row-cols-lg-4 row-cols-md-2 row-cols-sm-1 g-4 bg-img">
         <% for(let listing of allListings)  { %>
            <a href="/listings/<%= listing._id %>" class="show-info">
                <div class="card listing-card">
                 <img src="<%= listing.image.url %>" class="card-img-top" alt="listing_image" style="height: 20rem">
                    <div class="card-img-overlay"></div>
                    <div class="card-body">
                        <p class="card-text"><b><%= listing.title %></b></p>
                        <p class="card-text">&#x20B9;<%=listing.price.toLocaleString("en-IN")%>/night
                         &nbsp;&nbsp;<i class="tax-info">+18% GST</i></p>
                    </div>
                </div>
                 <% } %>  
            </a> 
    </div>
