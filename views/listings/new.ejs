<% layout("/layouts/boilerplate") %>
<div class="row mt-3">
     <div class="col-11 new-show"  >
          <h2> Create New Listing</h2>
          <form  method="POST" action="/listings" class="needs-validation" novalidate enctype="multipart/form-data"> 
               <div class="mb-4" >
                         <lable for="title" class="form-lable"> Title </lable>

                         <input name="listing[title]" placeholder="enter title" type="text" class="form-control" required>
                         <div class="invalid-feedback"> Please should be valid Title </div>
               </div>
               <div class="mb-4"  >
                    <lable for="description" class="form-lable"> Description </lable>
                    <textarea name="listing[description]" id="description"  type="text" class="form-control" > </textarea>
               </div>

               <div class="mb-4" >
                    <lable for="image" class="form-lable"> Image Upload </lable>
                    <input name="listing[image]"  type="file" class="form-control" required >  
                    <div class="invalid-feedback"> Please should be valid Image </div> 
               </div>
                         
               <div class="row">
                    <div class="mb-4 col-md-4">
                         <lable for="price" class="form-lable"> Price </lable> 
                         <input name="listing[price]" placeholder="enter price" type="number" class="form-control" required>
                         <div class="invalid-feedback"> Please should be valid Price </div>  
                    </div>
                    <div class="mb-4 col-md-8">
                         <lable for="country" class="form-lable"> Country </lable>
                         <input name="listing[country]" placeholder="enter country" type="text" class="form-control" required>
                         <div class="invalid-feedback"> Please should be valid Country  </div>
                    </div> 
               </div>

               <div class="mb-4">
                    <lable for="location" class="form-lable"> Location </lable>
                    <input name="listing[location]" placeholder="enter location" type="text" class="form-control" required>
                    <div class="invalid-feedback"> Please should be valid Location </div>
               </div>              

                         <button class="btn btn-dark add-btn mt-3 mb-2"> ADD </button>
          </form>
     </div>
</div>



